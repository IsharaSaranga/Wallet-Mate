<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalletMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_primary</item>
        <item name="colorPrimaryVariant">@color/dark_blue_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. for theam -->
        <item name="colorSecondary">@color/dark_blue_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_blue_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. for theam -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_blue_background</item>
        <item name="colorSurface">@color/dark_blue_surface</item>
        <item name="colorOnBackground">@color/dark_blue_text</item>
        <item name="colorOnSurface">@color/dark_blue_text</item>
        <item name="android:textColorPrimary">@color/dark_blue_text</item>
        <item name="android:textColorSecondary">@color/dark_blue_text_secondary</item>
        <item name="android:navigationBarColor">@color/dark_blue_primary</item>
    </style>
</resources>
